/* David Winckel & Fran√ßois Ripp */

body
{
	background-color:#777;
	padding:0px;
	margin:0px;
}

#header
{
	border: 1px solid #000;
	float:left;
	width:96%;
	height:130px;
	padding-left:1%;
	padding-right:1%;
	padding-top:10px;
	padding-bottom:10px;
	margin-left:1%;
	margin-right:1%;
	margin-top:10px;
	background-color:#0051E0;
	background-image:url('../ressources/header.png');
	background-repeat:no-repeat;
	background-position:left;
        text-align: right;
        vertical-align: bottom;
}

#topmenu
{
	border: 1px solid #000;
	float:left;
	width:96%;
	min-height:20px;
	padding-right:1%;
	padding-left:1%;
	padding-top:10px;
	padding-bottom:10px;
	margin-left:1%;
	margin-right:1%;
	margin-top:10px;
	text-align:right;
	background-color:#FEFFA6;
}

#menu
{
	border: 1px solid #000;
	float:left;
	width:20%;
	min-height:300px;
	padding-right:1%;
	padding-left:1%;
	padding-top:10px;
	padding-bottom:10px;
	margin-bottom:5px;
	margin-left:1%;
	margin-top:10px;
	background-color:#FF4236;
}

#content
{
	border: 1px solid #000;
	
	float:left;
	width:72.5%;
	
	min-height:300px;
	
	padding-right:1%;
	padding-left:1%;
	padding-top:10px;
	padding-bottom:10px;
	
	margin-top:10px;
	margin-left:1%;
	margin-right:1%;
	margin-bottom:10px;
	
	background-color:#FFFFFF;

}

#footer
{
	border: 1px solid #000;
	float:left;
	width:96%;
	padding-right:1%;
	padding-left:1%;
	padding-top:10px;
	padding-bottom:10px;
	margin-left:1%;
	margin-right:1%;
	margin-bottom:10px;
	background-color:#0051E0;
        text-align: center;
}

.menuParent
{
	text-align:center;
	position:relative;
	height:25px;
	width:100%;
	
	font-weight:bold;
	
	margin-bottom:1%;
        
        display:block;
}

.menuElement
{
        color:#000;
	border: 1px solid #000;
	text-align:center;
	
	position:relative;
	height:25px;
	width:100%;
	
	margin-bottom:1%;
	
	background-color:#FFFFFF;
        display:block;
}

.menuElement:link
{
        color:#000;
	background-color:#FFDF00;
}

.menuElement:hover
{
        color:#000;
	background-color:#FFDF00;
}

.menuElement:visited
{
        color:#000;
	background-color:#FFDF00;
}

#hidden
{	
	float:left;
	width:100%;
	
	text-align:center;
}
